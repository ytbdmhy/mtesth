	<bean id="commonApiProxy" class="org.springframework.remoting.caucho.HessianProxyFactoryBean">  
	    <property name="serviceUrl" value="${common.remote.server}"/>  
	    <property name="serviceInterface" value="com.hgv.base.service.CommonApiProxy"/>
	</bean> 
	
	<bean id="contentApiProxy" class="org.springframework.remoting.caucho.HessianProxyFactoryBean">  
	    <property name="serviceUrl" value="${content.remote.server}"/>  
	    <property name="serviceInterface" value="com.hgv.base.service.ContentApiProxy"/>
	</bean> 
	
	<bean id="logApiProxy" class="org.springframework.remoting.caucho.HessianProxyFactoryBean">  
	    <property name="serviceUrl" value="${log.remote.server}"/>  
	    <property name="serviceInterface" value="com.hgv.base.service.LogApiProxy"/>
	</bean>
	
	<bean id="forumApiProxy" class="org.springframework.remoting.caucho.HessianProxyFactoryBean">  
	    <property name="serviceUrl" value="${forum.remote.server}"/>  
	    <property name="serviceInterface" value="com.hgv.base.service.ForumApiProxy"/>
	</bean>
	  
